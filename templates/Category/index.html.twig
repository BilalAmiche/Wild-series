{% extends "base.html.twig" %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category : </h1>
    {% for category in categories %}
        <ul>
            <li> <a href="{{path('category_show' , { categoryName: category.name }) }}">{{category.name}}</a> </li>
        </ul>
    {% else %}
        Aucune Catégorie trouvée.
    {% endfor %}
{% endblock %}
